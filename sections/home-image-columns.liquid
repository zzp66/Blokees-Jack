<style>
	.shane-image-columns{
		width:100%;
		padding: 5.2vw 0;
		background-color: #F4F0E6;
		color: #FF5F00;
		font-family: Outfit-Light;
	}
	.shane-image-columns>div{
		width: 97%; margin-right: 0; margin-left: auto;
	}
	.image-title{
		font-family: Outfit-Bold; font-size: 3vw; text-transform: capitalize;
	}
	.image-text{
		color: #FD7C2E;
	}
	.image-columns{
		font-family: Outfit-Bold; margin-top:  1vw;
	}
	.imagecolumnSwiper .swiper-slide{
		background-color: #FD7C2E;
		border-radius: 1vw;
		position: relative;
	}
	.imagecolumnSwiper .swiper-slide:hover{
		background-color: #FF5F00;
	}
	.image-columns-title{
		position: absolute; left: 3%; top: 5%; width: 70%; height: 15%; display: flex; justify-content: flex-start; align-items: center; color: #F4F0E6; text-transform: uppercase; font-size: 1.6vw;
	}
	.image-columns-title img{
		height: 100%; width: auto; margin-right: 0.5vw;
	}
	.image-columns-link{
		position: absolute; right: 7%; bottom: 7%;
	}
	.image-columns-link a{
		width: fit-content; padding: 0 0.5vw;
	}
@media (max-width: 768px){
	.shane-image-columns>div{
		width: 95%;
	}
	.shane-image-columns{
		padding: 7vw 0;
	}
	.image-title{
		font-size: 7.6vw;
	}
	.image-columns{
		margin-top:  4vw;
	}
	.image-columns-title {
		font-size: 4.6vw;
	}
	.image-columns-link a {
		width: fit-content;
        min-width:25vw;
	}
	.image-columns .shane-button{
		height: 8vw; border-radius: 4vw; font-size: 3vw;
	}
	.image-columns .btn__label{
		padding: 0 1vw;
	}
	.image-columns .btn__circle>div{
		height: 5vw;
	}
	.image-columns .shane-button:hover .btn__circle{
		width:5vw; height: 5vw;
	}
	.image-columns .shane-button:hover .btn__circle>div{
		width: 5vw;
	}
}
</style>
	<div class="image-title">{{ section.settings.heading }}</div>
	<div class="image-text">{{ section.settings.text }}</div>
	<div class="image-columns">
		<div class="swiper imagecolumnSwiper">
			<div class="swiper-wrapper">
              {%- assign my_variable = 0 -%} 
              {%- assign blocksnum = section.blocks -%} 
			  {%- for block in section.blocks -%}
               {%- liquid
    			assign image = block.settings.image
                assign image_m = block.settings.image_m
                assign imageicon = block.settings.imageicon
                assign num1 = 2                
    		   -%}
              {%- assign my_variable = my_variable | plus: 1 -%} 
              <div class="swiper-slide">
					<img src="{{ image | image_url }}" class="img-responsive pc_show wow fadeInUp" data-wow-duration=".5s" data-wow-delay=".{{ my_variable | times: num1 }}s" data-wow-offset="100" alt="{{image.alt }}">
                    <img src="{{ image_m | image_url }}" class="img-responsive mobile_show wow fadeInUp" data-wow-duration=".5s" data-wow-delay=".{{ my_variable | times: num1 }}s" data-wow-offset="100" alt="{{image_m.alt }}">
					<div class="image-columns-title">{%- if block.settings.imageicon != blank -%}<img src="{{ imageicon | image_url }}">{% endif %}<span>{{ block.settings.slidetitle }}</span></div>
					<div class="image-columns-link">
						<a class="shane-button" href="{{ block.settings.slide_link }}">
							<div class="btn__label">{{ block.settings.buttontext }}</div>
							<div class="btn__circle">
								<div>
									<svg class="bi bi-arrow-right-short" width="100%" height="100%" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
									  <path fill-rule="evenodd" d="M8.146 4.646a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.793 8 8.146 5.354a.5.5 0 0 1 0-.708z"/>
									  <path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5H11a.5.5 0 0 1 0 1H4.5A.5.5 0 0 1 4 8z"/>
									</svg>
								</div>							
							</div>
						</a>
					</div>
				</div>
  				{%  endfor %}
			</div>
		</div>
        {% if blocksnum.size > 4 %} 
		<div class="swiper-l-r">
			<div class="columns-next">
				<img src="https://cdn.shopify.com/s/files/1/0679/6538/6990/files/icon-right.svg?v=1705634939" class="icon-next">
				<img src="https://cdn.shopify.com/s/files/1/0679/6538/6990/files/icon-left.svg?v=1705634939" class="icon-next-hover">				
			</div>
			<div class="columns-prev">
				<img src="https://cdn.shopify.com/s/files/1/0679/6538/6990/files/icon-right.svg?v=1705634939" class="icon-prev">
				<img src="https://cdn.shopify.com/s/files/1/0679/6538/6990/files/icon-left.svg?v=1705634939" class="icon-prev-hover">
			</div>
		</div>
        {% endif %}
	</div>
{% schema %}
  {
    "name": "Home Image Columns",
    "class": "shane-image-columns",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
	  },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text",
        "default": "text"
      }
    ],
    "blocks": [
       {
         "type": "item",
         "name": "item",
         "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Image",
              "info": "Banner Img"
            },
           {
              "type": "image_picker",
              "id": "image_m",
              "label": "Image mobile",
              "info": "Banner Img mobile"
            },
            {
              "type": "image_picker",
              "id": "imageicon",
              "label": "Image icon",
              "info": "Banner Img icon"
            },
            {
              "type": "text",
              "id": "slidetitle",
              "label": "Slide title",
              "default": "Add a title"
			},
           	{
              "id": "slide_link",
              "type": "url",
              "label": "Slide link",
              "info": "Adds a link to slide"
            },
            {
              "type": "text",
              "id": "buttontext",
              "label": "Button Text",
              "default": "View More"
			}
         ]
       }
    ],
    "presets": [
       {
        "name": "Home Image Columns"
          
       }
    ]
  }
{% endschema %}