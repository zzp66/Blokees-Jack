<style>
	.shane-pro-block01{
		background-color: #1A1A1A; padding-top: 8vw;
	}
	.shane-pro-block01>div{
		width: 90%; margin: auto; color: #fff;
	}
	.shane-pro-block01 h2{
		text-align: center; color:#fff; font-size: 2.2vw; line-height: 2.8vw;
	}
	.shane-pro-block01 .info{
		width:65%; margin: auto; font-size: 0.9vw; text-align: center; opacity: 0.8;
	}
	.shane-pro-block01 .columns{
		width:100%; margin-top: 2vw; display: flex; justify-content: space-between; align-items: flex-start;
	}
	.shane-pro-block01 .columns>div{
		width: 46.5%;
	}
	.shane-pro-block01 .shane-list{
		width: 100%; border-bottom: 1px solid #8C8C8C; padding: 0.4vw 2vw; cursor: pointer;
	}
	.shane-left .active{
		border-bottom: 0; background-color: #FF5F00; border-radius: 0.6vw;
	}
	.shane-pro-block01 .shane-title{
		display: flex; justify-content: space-between; align-items: center;
	}
	.shane-pro-block01 .shane-title span{
		font-size: 1.3vw; height: 3.6vw; font-family: Outfit-Bold;align-items: center;display: flex;
	}
	.shane-pro-block01 .shane-title span img{
		height: 100%; margin-right: 1vw; display: none;
	}
	.shane-pro-block01 .shane-title span .body-title{
		line-height: 1.4vw;
	}
	.shane-pro-block01 .active span img{
		display:inline;
	}
	.shane-pro-block01 .icon-right{
		display: block; width: 1.2vw; transform: rotate(180deg);
	}
	.shane-pro-block01 .icon-up{
		display: none; transform: rotate(-90deg); width: 1.2vw;
	}
	.shane-pro-block01 .shane-text{
		display:none; font-size: 1.2vw; opacity: 0.8; padding: 1vw 1vw 1vw 0; transition:1s;
	}
	.shane-pro-block01 .shane-left .active .icon-right{
		display: none;
	}
	.shane-pro-block01 .shane-left .active .icon-up{
		display: block;
	}
	.shane-pro-block01 .shane-left .active .shane-text{
		display:block;
	}
	.shane-pro-block01 .shane-right{
		position: relative;
	}		
	.shane-pro-block01 .shane-right img{
		width: 100%;
	}
    .shane-pro-block01 .shane-video-btn>a{
      display:block; cursor: pointer;
    }
    .shane-pro-block01 .shaneProVideo{
    	width:100%; height: 100%; position: fixed; background-color: #00000040; -webkit-backdrop-filter: blur(15px); backdrop-filter: blur(15px); top: 0; left: 0; z-index: 999; display: none; justify-content: center; align-items: center;
    }
    .shane-pro-block01 .shaneProVideo iframe{
    	width: 90vw; max-width: 720px; height: 60vw; max-height: 540px;
    }
    .shane-pro-block01 .shaneProVideo .close-shaneProVideo{
    	width: 35px; height: 35px; border-radius: 50%; background-color: #fff; position: absolute; right: 20px; top: 20px; cursor: pointer; display: flex; justify-content: center; align-items: center;
    }
    .shane-pro-block01 .shaneProVideo .close-shaneProVideo svg{
    	width:45%; transform: rotate(-45deg); transition: 0.2s;
    }
    .shane-pro-block01 .shaneProVideo .close-shaneProVideo:hover svg{
    	transform: rotate(45deg);
    }
@media (max-width: 1300px){
    .shane-pro-block01 h2{
		font-size: 3vw; line-height: 4vw;
	}
    .shane-pro-block01 .info {
      width:75%; font-size: 1.4vw;
    }
}
@media (max-width: 768px){
	.shane-pro-block01{
		padding-bottom: 4vw;
	}
    .shane-pro-block01 h2{
		font-size: 5vw; line-height: 6.4vw;
	}
	.shane-pro-block01 .info{
		width:100%; font-size: 3.6vw;
	}
	.shane-pro-block01 .columns {
		margin-top: 4vw;
		display: block;
	}
	.shane-pro-block01 .columns>div {
		width: 100%;
	}
	.shane-pro-block01 .shane-list{
		padding: 5vw 4vw;
	}
	.shane-pro-block01 .shane-title span {
		font-size: 3.4vw;
		height: 3.6vw;
      display:flex;
	}
	.shane-pro-block01 .shane-title span img {
		height: auto;
		width: 8vw;
		margin-right: 2vw;
	}
	.shane-pro-block01 .shane-title span .body-title{
		line-height: 4.4vw;
	}
	.shane-pro-block01 .icon-right, .shane-pro-block01 .icon-up{
		width: 2vw;
	}
	.shane-pro-block01 .shane-text{
		font-size: 3vw; padding: 3vw 1vw 1vw 0;
	}
	.shane-pro-block01 .shane-right{
		margin-top: 5vw;
	}
    .shane-pro-block01 .shane-right .shane-video-btn div{
        height: 10vw;
        width: 10vw;
    }
    .shane-pro-block01 .shane-right .shane-video-btn span {
      font-size: 4vw;
      line-height: 10vw;
	}
	
}
</style>
	<div>
		<h2>{{ section.settings.heading }}</h2>
		<div class="info">{{ section.settings.context }}</div>
		<div class="columns">
			<div class="shane-left">
              {%- assign my_variable = 0 -%} 
              {%- for block in section.blocks -%}
              {% assign my_variable = my_variable | plus: 1 %}
				<div class="shane-list {% if my_variable==1 %}active{% endif %}">
					<div class="shane-title">
						<span>
							{% if block.settings.block_image != blank %}
								<img src="{{ block.settings.block_image | image_url }}">{% endif %} 
								<div class='body-title'>
									{{ block.settings.block_title }}
								</div>
							</span>
						<img src="https://cdn.shopify.com/s/files/1/0679/6538/6990/files/icon-left.svg?v=1705634939" class="icon-right">
						<img src="https://cdn.shopify.com/s/files/1/0679/6538/6990/files/icon-left.svg?v=1705634939" class="icon-up">
					</div>
					<p class="shane-text">{{ block.settings.block_text }}</p>
				</div>
              {% endfor %}
			</div>
			<div class="shane-right">
				<img src="{{ section.settings.image | image_url }}" alt="{{ section.settings.image.alt }}">
                {% if section.settings.link != blank %}
				<div class="shane-video-btn" style="background-color: #00000000;">
					<a>
						<div><span class="fa fa-play"></span></div>
					</a>
				</div>
                <div class="shaneProVideo">		
				{% comment %}  autoplay;  {% endcomment %}
            		<iframe src="{{ section.settings.link }}" title="YouTube video player" frameborder="0" allow="accelerometer;clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen=""></iframe>
            		<div class="close-shaneProVideo">
            			<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H48c-17.7 0-32 14.3-32 32s14.3 32 32 32H192V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H400c17.7 0 32-14.3 32-32s-14.3-32-32-32H256V80z"></path></svg>
            		</div>
            	</div>
                {% endif %}
			</div>
		</div>
	</div>
{% schema %}
  {
    "name": "Pro block01",
    "class": "shane-pro-block01",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
	  },
      {
        "type": "textarea",
        "id": "context",
        "label": "Text"
      },
      {
        "id": "link",
        "type": "url",
        "label": "Video url",
        "info": "Add Video url"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }      
    ],
    "blocks": [
       {
         "type": "item",
         "name": "item",
         "settings": [
            {
              "type": "image_picker",
              "id": "block_image",
              "label": "Image icon",
              "info": "icon"
            },
            {
              "type": "text",
              "id": "block_title",
              "label": "Title",
              "default": "Add a title"
			},
           {
              "type": "text",
              "id": "block_text",
              "label": "Text",
              "default": "text"
			}
         ]
       }
    ],
    "presets": [
       {
        "name": "Pro block01"
          
       }
    ]
  }
{% endschema %}
<script>
$(document).ready(function() {
		$(".shane-pro-block01 .shane-list").click(function(){
			$(".shane-pro-block01 .shane-list").removeClass("active");
			$(this).addClass("active");			
		});
 		$(".shane-pro-block01 .shane-video-btn a").click(function(){
            $(".shane-pro-block01 .shane-right>.shaneProVideo").css("display","flex");        
        });
    	$(".shane-pro-block01 .shane-right .close-shaneProVideo").click(function(){
    		$(".shane-pro-block01 .shane-right>.shaneProVideo").css("display","none"); 
    	});
	});
</script>