    position: absolute;
    left: 0;
    top: calc(35000vw / var(--base-width));
    display: flex;
    flex-direction: column;
    gap: calc(1400vw / var(--base-width));
  }

  #{{ section.id }}-hero-detail .right-text-container {
    position: absolute;
    right: 0;
    top: calc(35000vw / var(--base-width));
    display: flex;
    flex-direction: column;
    gap: calc(1400vw / var(--base-width));
    align-items: flex-end;
  }

