<style>
  #{{ section.id }}-hero-detail {
    font-family: Outfit-Regular;
    width: 100%;
    background: {{ section.settings.background_color }};
    margin-top: -1px;
    padding: calc(8000vw / var(--base-width)) calc(12000vw / var(--base-width)) calc(10000vw / var(--base-width));
  }

  #{{ section.id }}-hero-detail .container {
    width: 100%;
    position: relative;
    padding: 0;
  }

  #{{ section.id }}-hero-detail .mian-img {
    width: 100%;
  }

  #{{ section.id }}-hero-detail .title-container {
    color: {{ section.settings.title_font_color }};
    position: absolute;
    left: 0;
    top: 0;
    display: flex;
    flex-direction: column;
    gap: calc(1000vw / var(--base-width));
  }

  #{{ section.id }}-hero-detail .title-container .title {
    font-size: calc(5000vw / var(--base-width));
    line-height: 1;
    margin-top: 0;
    margin-bottom: 0;
