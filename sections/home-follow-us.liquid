<style>
  .home-follow-us h2,
  .home-follow-us p {
    margin: 0;
  }
  .home-follow-us {
    background-color: #ff5f00;
    padding: 0 calc(100vw * 30 / var(--base-size));
  }
  .follow-us-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_pc }}px;
    padding-bottom: {{ section.settings.padding_bottom_pc }}px;
  }
  h2.follow-us-h2 {
    color: #f4f0e6;
    font-family: Outfit;
    font-size: calc(100vw * 76 / var(--base-size));
    font-style: normal;
    font-weight: 700;
    line-height: calc(100vw * 78 / var(--base-size));
    text-transform: capitalize;
    max-width: calc(100vw * 389 / var(--base-size));
  }
  .follow-us-l {
    padding-top: calc(100vw * 80 / var(--base-size));
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    column-gap: 20px;
    flex: 1;
  }
  .follow-us-form-box {
    max-width: 95%;
  }
  .follow-us-r {
    margin-left: calc(100vw * 15 / var(--base-size));
  }
  .follow-us-top {
    display: flex;
    margin-bottom: calc(100vw * 60 / var(--base-size));
  }
  .follow-us-bottom {
    border-top: 1px solid #f4f0e6;
    padding-top: calc(100vw * 20 / var(--base-size));
  }
  .follow-us-forms {
    max-width: calc(100vw * 430 / var(--base-size));
  }
  p.follow-us-join-our {
    color: #f4f0e6;
    font-family: Outfit;
    font-size: calc(100vw * 30 / var(--base-size));
    font-style: normal;
    font-weight: 700;
    line-height: 1;
    text-transform: capitalize;
  }
  p.follow-us-join-desc {
    color: #f4f0e6;
    font-family: Outfit;
    font-size: calc(100vw * 18 / var(--base-size));
    font-style: normal;
    font-weight: 400;
    line-height: calc(100vw * 22 / var(--base-size));
    margin-top: calc(100vw * 20 / var(--base-size));
    max-width: 96%;
  }
  .follow-us-form {
    margin-top: calc(100vw * 35 / var(--base-size));
  }
  .follow-us-img {
    max-width: calc(100vw * 480 / var(--base-size));
    position: relative;
    margin-top: calc(100vw * -130 / var(--base-size));
    z-index: 99;
  }
  .home-follow-us input.sign-email {
    width: 100%;
    border-radius: 0;
    border: none;
    border-bottom: 1px solid #fff;
    color: #fff;
    outline: none;
    font-size: calc(100vw * 18 / var(--base-size));
    line-height: 1;
    padding: 0 0 10px;
    height: auto;
    margin: 0;
  }
  .home-follow-us input.sign-email::placeholder {
    color: #fff;
    opacity: 0.45;
  }
  .home-follow-us form#contact_form {
    position: relative;
  }
  .follow-check {
    position: relative;
  }
  .follow-check .follow-check-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    bottom: 10px;
    right: 0;
    background-color: #f4f0e6;
    padding: calc(100vw * 10 / var(--base-size)) calc(100vw * 20 / var(--base-size));
    border-radius: 30px;
  }
  .follow-check input.sign-submit {
    background-color: inherit;
    color: #ff5f00;
    -webkit-text-stroke-width: 1;
    -webkit-text-stroke-color: #ff5f00;
    font-size: calc(100vw * 16 / var(--base-size));
    font-weight: 700;
    line-height: 1;
    text-transform: capitalize;
    border-radius: 0;
    padding: 0;
    margin-right: calc(100vw * 6 / var(--base-size));
    height: auto;
  }
  .home-follow-us .sign-info {
    display: flex;
    align-items: flex-start;
    margin-top: calc(100vw * 20 / var(--base-size));
  }
  .home-follow-us .sign-info input {
    margin: 0;
  }
  .home-follow-us .sign-info .sign-text {
    margin-left: calc(100vw * 10 / var(--base-size));
    color: #fff;
    font-family: Outfit;
    font-size: calc(100vw * 14 / var(--base-size));
    font-style: normal;
    font-weight: 300;
    line-height: calc(100vw * 16 / var(--base-size));
  }
  .follow-us-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    align-items: center;
    column-gap: 40px;
  }
  .follow-us-grid-item {
    display: flex;
    align-items: center;
  }
  .grid-item-img {
    max-width: calc(100vw * 50 / var(--base-size));
    margin-right: calc(100vw * 10 / var(--base-size));
  }
  .grid-item-info .info-1 {
    color: #f4f0e6;
    font-family: Outfit;
    font-size: calc(100vw * 20 / var(--base-size));
    font-style: normal;
    font-weight: 700;
    line-height: 1;
    text-transform: capitalize;
  }
  .grid-item-info .info-2 {
    color: #f4f0e6;
    font-family: Outfit;
    font-size: calc(100vw * 14 / var(--base-size));
    font-style: normal;
    font-weight: 300;
    line-height: 1;
    letter-spacing: -0.42px;
    margin-top: calc(100vw * 8 / var(--base-size));
  }
  @media screen and (max-width: 1200px) {
    .follow-us-img {
      max-width: calc(100vw * 280 / var(--base-size));
      position: relative;
      margin-top: calc(100vw * -30 / var(--base-size));
      z-index: 99;
    }
  }

  @media screen and (max-width: 750px) {
    .follow-us-{{ section.id }} {
    padding-top: {{ section.settings .padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }
    .follow-us-l {
      flex-direction: column;
      justify-content: flex-start;
    }
    h2.follow-us-h2 {
      font-size: calc(100vw * 60 / var(--base-size));
      line-height: calc(100vw * 62 / var(--base-size));
    }
    p.follow-us-join-our {
      font-size: calc(100vw * 30 / var(--base-size));
      line-height: calc(100vw * 32 / var(--base-size));
      margin-top: calc(100vw * 60 / var(--base-size));
    }
    p.follow-us-join-desc {
      font-size: calc(100vw * 18 / var(--base-size));
      line-height: calc(100vw * 22 / var(--base-size));
      margin-top: calc(100vw * 14 / var(--base-size));
    }
    .follow-us-img {
      max-width: calc(100vw * 405 / var(--base-size));
      position: relative;
      margin-top: calc(100vw * -20 / var(--base-size));
      margin-right: calc(100vw * -100 / var(--base-size));
    }
    .follow-us-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      align-items: center;
      gap: calc(100vw * 30 / var(--base-size)) calc(100vw * 20 / var(--base-size));
    }
  }
</style>
<div class="home-follow-us follow-us-{{ section.id }}">
  <div class="home-follow-us-content">
    <div class="follow-us-top">
      <div class="follow-us-l">
        <h2 class="follow-us-h2">{{ section.settings.title }}</h2>
        <div class="follow-us-forms">
          <p class="follow-us-join-our">{{ section.settings.title_info_1 }}</p>
          <p class="follow-us-join-desc">{{ section.settings.title_info_2 }}</p>
          <div class="follow-us-form-box">
            {% form 'customer', class: 'signup-form' %}
              {% if form.posted_successfully? %}
                <div class="form-notification success">
                  {{ 'newsletter.success' | t }}
                </div>
              {%- elsif form.errors %}
                <div class="form-notification error">
                  {{ form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email }}
                </div>
              {% endif %}
              <div class="follow-us-form">
                <input
                  placeholder="Email:"
                  class="sign-email"
                  type="email"
                  id="NewsletterForm--{{ section.id }}"
                  name="contact[email]"
                  placeholder="Email"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  value="{{ form.email }}"
                  pattern="^([a-zA-Z0-9_\-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$"
                  title="xxx@xxx.xxx"
                  {% if form.errors %}
                    autofocus
                    aria-invalid="true"
                    aria-describedby="Newsletter-error--{{ section.id }}"
                  {% elsif form.posted_successfully? %}
                    aria-describedby="Newsletter-success--{{ section.id }}"
                  {% endif %}
                  required
                >
                <div class="follow-check">
                  <div class="follow-check-btn">
                    <input type="submit" class="sign-submit" value="Subscribe">
                    <svg xmlns="http://www.w3.org/2000/svg" width="13" height="12" viewBox="0 0 13 12" fill="none">
                      <path d="M7.07143 1.76923L11 6M11 6L7.07143 10.2308M11 6H1V1" stroke="#FF5F00" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                  </div>
                </div>
              </div>

              <div class="sign-info">
                <input type="checkbox" required>
                <div class="sign-text">
                  We are committed to protecting the security and privacy of your mailbox information.
                </div>
              </div>
            {% endform %}
          </div>
        </div>
      </div>
      <div class="follow-us-r">
        <div class="follow-us-img">
          <img src="{{ section.settings.img | image_url: width: master }}" alt="">
        </div>
      </div>
    </div>
    <div class="follow-us-bottom">
      <div class="follow-us-grid">
        {% for block in section.blocks %}
          <div class="follow-us-grid-item">
            <div class="grid-item-img">
              <img
                src="{{ block.settings.item_img | image_url: width: master }}"
                alt=""
              >
            </div>
            <div class="grid-item-info">
              <p class="info-1">{{ block.settings.item_info_1 }}</p>
              <p class="info-2">{{ block.settings.item_info_2 }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Home Follow Us",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "rewards plan"
    },
    {
      "type": "text",
      "id": "title_info_1",
      "label": "Info 1",
      "default": "join our fan rewards program"
    },
    {
      "type": "text",
      "id": "title_info_2",
      "label": "Info 2",
      "default": "Enroll to Get the Ultimate Fan Experience! Earn Points and Redeem for Exclusive Rewards."
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "padding_top_pc",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "PC端上边距",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_pc",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "PC端下边距",
      "default": 70
    },
    {
      "type": "range",
      "id": "padding_top_mb",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "移动端上边距",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mb",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "移动端下边距",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "item_img",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "item_info_1",
          "label": "Item Info 1",
          "default": "free shipping"
        },
        {
          "type": "text",
          "id": "item_info_2",
          "label": "Item Info 2",
          "default": "Free shipping in 3-7 business days."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home Follow Us"
    }
  ]
}
{% endschema %}
