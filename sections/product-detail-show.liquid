    {
      "type": "color",
      "id": "number_background_color",
      "label": "Number Background Color",
      "default": "#006DE5"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#006DE5"
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "Button Background Color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "rich_text_color",
      "label": "Rich Text Color",
      "default": "#fff"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "number_text",
          "label": "Number Text"
        },
        {
          "type": "text",
          "id": "content_text",
          "label": "Content Text"
        },
        {
          "type": "richtext",
          "id": "rich_text",
          "label": "Rich Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Detail Show"
    }
  ]
