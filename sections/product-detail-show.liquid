        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "image_picker",
      "id": "unit3_img",
      "label": "Unit3 Image"
    },
    {
      "type": "image_picker",
      "id": "unit3_img_mobile",
      "label": "Unit3 Image Mobile"
    },
    {
      "type": "image_picker",
      "id": "unit3_background_image",
