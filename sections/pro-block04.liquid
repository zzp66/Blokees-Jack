<style>
	.shane-pro-block04{
		width: 100%; padding-top: 6vw; color: #fff; background-color: #006DE5;
	}
	.shane-pro-block04>div{
		width: 94%; margin: auto; display:flex; justify-content: space-between; align-items: center;
	}
	.shane-pro-block04>div>div{
		width:50%;
	}
	.shane-pro-block04>div .context{
		position: relative; padding-left: 10vw; height: 30vw;
	}
    .shane-pro-block04 .context>div{
		position: absolute; left: 0; height: 7vw; background-color: #006DE5; z-index: 9; top: 50%; margin-top: -3.5vw; width: 100%;
	}
	.shane-pro-block04 .context h2{
		margin: 1vw 0 0.5vw; font-size: 2.6vw; color:#fff; line-height:3vw;
	}
	.shane-pro-block04 .context .text{
		font-size: 1vw;
	}
	.shane-pro-block04  .context .text span{
		font-family: Outfit-Bold;
	}
	.block04-video{
		position: relative;
	}
	.video-text{
		position: absolute; left: 5%; bottom: 2vw; width: 70%;
	}
	.video-text h2{
		font-size: 2.6vw; margin: 0 0 1vw; color:#fff; line-height:3vw;
	}
	.video-text>div{
		font-size: 1.1vw;
	}
	.shane-pro-block04>div:last-child{
		margin-top: 6vw;
	}
	.shane-pro-block04 .block04-info{
		padding-left: 4vw;
	}
	.shane-pro-block04 .block04-info .stitle{
		font-size: 1vw;
	}
	.shane-pro-block04 .block04-info .title{
		font-size: 2vw; font-family: Outfit-Bold; line-height: 2.4vw; width: 90%; margin: 0.5vw 0 2vw;
	}
	.shane-pro-block04 .block04-info .text01{
		width: 70%; border-left: 2px solid #fff; padding-left: 8px; margin-bottom: 1vw;
	}
	.shane-pro-block04 .block04-info .text02{
		padding-left: 10px; opacity: 0.5; width: 75%;
	}
	.shane-pro-block04 .block04-info .type-name{
		width:16vw; background-color: #fff; border-radius: 8px; display: flex; justify-content: flex-start; align-items: center; text-align: center; margin-top: 2vw; padding: 2px;
	}
	.block04-info .type-name img {
		width: 3vw;
	}
	.block04-info .type-name div {
		text-transform: uppercase; color: #FF5F00; width: 13vw;
	}
	.block04-info .type-name h3{
		 font-family: Outfit-Bold; font-size: 1.4vw; line-height: 1.4vw; margin: 0;color: {{ section.settings.type_color }};
	}
	.block04-info .type-name span{
		font-size: 0.5vw; letter-spacing:0.4vw;color: {{ section.settings.type_color }};
	}
	.block04-info .probability{
		font-size: 7vw; font-family: Outfit-Bold; line-height: 7vw;
	}
	#Layer_1, #Layer_2{
		width: 10vw; height: 32vw; position: absolute; left: 13vw; top: 0vw; display: block;
	}
	#Layer_11, #Layer_12{
		display: none;
	}
	.svg-line4{
		stroke-width: 1px;
		stroke: #ffffff;
		fill:none;
		stroke-dasharray: 1400;
		stroke-dashoffset: 1400;
		animation: svgmove 2s infinite;
	}
	.svg-line5{
		stroke-width: 1px;
		stroke: #ffffff;
		fill:none;
		stroke-dasharray: 1400;
		stroke-dashoffset: 1400;
		animation: svgmove02 2s infinite;
	}
	@keyframes svgmove02 {
		to {
			stroke-dashoffset: 0;
		}
	}
	.block04-fd{
		width:2.5vw; position: absolute; top: 8vw; left: 31vw; animation: moveblock04fd 1s ease-in-out infinite;
	}
	@keyframes moveblock04fd {
	  0% {
		top: 8vw;
	  }
	  50% {
		top: 7.5vw;
	  }
	  100% {
		top: 8vw;
	  }
	}
@media (max-width: 768px){
	.shane-pro-block04{
		padding-top: 6vw;
	}
	.shane-pro-block04>div{
		flex-wrap: wrap;
	}
	.shane-pro-block04>div:last-child{
		flex-wrap: wrap-reverse;
	}
	.shane-pro-block04>div>div{
		width:100%;
	}
	.shane-pro-block04>div .context{
		position: relative; padding-left: 10vw; height: 50vw;
	}
    .shane-pro-block04 .context>div{
		height: 24vw;margin-top: -15vw; text-align: center;
	}
	.shane-pro-block04 .context h2{
		margin: 2vw 0 0; font-size: 8vw; line-height:8.4vw;
	}
	.shane-pro-block04 .context .text{
		font-size: 4.4vw;
	}
	.shane-pro-block04  .context .text span{
		font-family: Outfit-Bold; display: block;
	}
	#Layer_1, #Layer_2{
		display: none;
	}
	#Layer_11, #Layer_12{
		width: 80vw; height: 40vw; position: absolute; left: 6vw; top: 0vw; display: block;
	}
	.block04-fd{
		width:8vw; position: absolute; top: 0vw; left: 70vw;animation: moveblock04fd-768 1s ease-in-out infinite;
	}
	@keyframes moveblock04fd-768 {
	  0% {
		top: 0;
	  }
	  50% {
		top: 0.5vw;
	  }
	  100% {
		top: 0;
	  }
	}
	.video-text{
		left: 5%; bottom: 3vw; width: 80%;
	}
	.video-text h2{
		font-size: 5vw; margin: 0 0 2vw; line-height:5.4vw;
	}
	.video-text>div{
		font-size: 4vw; line-height: 4.8vw;
	}
	.shane-pro-block04 .block04-info{
		padding-left: 0; font-size: 4vw; line-height: 5vw;
	}
	.shane-pro-block04 .block04-info .stitle{
		font-size: 4vw;
	}
	.shane-pro-block04 .block04-info .title{
		font-size: 7.2vw; line-height: 9.6vw; width: 100%; margin: 2vw 0 3vw;
	}
	.shane-pro-block04 .block04-info .text01{
		width: 96%; padding-left: 8px; margin-bottom: 2vw;
	}
	.shane-pro-block04 .block04-info .text02{
		padding-left: 10px; width: 96%;
	}
	.shane-pro-block04 .block04-info .type-name{
		width:42vw; margin:4vw auto 0; 
	}
	.block04-info .type-name img {
		width: 8vw;
	}
	.block04-info .type-name div {
		width: 32vw;
	}
	.block04-info .type-name h3{
		font-size: 3.6vw; line-height: 4vw;
	}
	.block04-info .type-name span{
		font-size: 1.4vw; letter-spacing:1.6vw; line-height: 2vw; display: block;
	}
	.block04-info .probability{
		font-size: 22vw;line-height: 22vw; margin: 0 auto 4vw; width: 50%; text-align: center;
	}
    .shane-pro-block04 .shane-video-btn div {
        height: 10vw;
        width: 10vw;
    }
    .shane-pro-block04 .shane-video-btn span {
        font-size: 4vw;
        line-height: 10vw;
    }
}
</style>
  {% if section.settings.show_b1 == "1" %}
	<div>
		<div class="context">
			<svg id="Layer_1" version="1.1" xmlns="http://www.w3.org/2000/svg" style="transform: rotate(-50deg);">
				<ellipse ry="14vw" rx="4vw" cy="50%" cx="50%" class="svg-line4" />
			</svg>
			<svg id="Layer_2" version="1.1" xmlns="http://www.w3.org/2000/svg" style="transform: rotate(50deg);">
				<ellipse ry="16vw" rx="4.8vw" cy="50%" cx="50%" class="svg-line5" />
			</svg>
			<svg id="Layer_11" version="1.1" xmlns="http://www.w3.org/2000/svg" style="transform: rotate(40deg);">
				<ellipse ry="8vw" rx="28vw" cy="50%" cx="50%" class="svg-line4" />
			</svg>
			<svg id="Layer_12" version="1.1" xmlns="http://www.w3.org/2000/svg" style="transform: rotate(-30deg);">
				<ellipse ry="12vw" rx="39vw" cy="50%" cx="50%" class="svg-line5" />
			</svg>
			<div>
				<h2>{{ section.settings.heading }}</h2>
				<div class="text">{{ section.settings.context }}</div>
			</div>
			<img src="https://cdn.shopify.com/s/files/1/0679/6538/6990/files/star-icon.png?v=1705974991" class="block04-fd">		
		</div>
		<div class="block04-video">
			<img src="{{ section.settings.image | image_url }}" style="width: 100%;">
			<div class="shane-video-btn" style="background-color: #00000000;">
				<a href="{{ section.settings.link }}">
					<div><span class="fa fa-play"></span></div>
				</a>
			</div>
			<div class="video-text">
				<h2>{{ section.settings.img_title }}</h2>
				<div>{{ section.settings.img_context }}</div>
			</div>
		</div>
	</div>
    {% endif %}
    {% if section.settings.show_b2 == "1" %}
	<div>
		<div><img src="{{ section.settings.image2 | image_url: width: 900 }}"  loading="lazy"  style="width: 100%;"></div>
		<div class="block04-info">
			<div class="stitle">{{ section.settings.subheading2 }}</div>
			<div class="title">{{ section.settings.heading2 }}</div>
			<div class="text01">{{ section.settings.context2 }}</div>
			<div class="text02">{{ section.settings.context3 }}</div>
			{% if section.settings.icon_checkbox == false %}
				<div class="type-name" >
					<img src="{{ section.settings.image_icon | image_url }}">
					<div>
						<h3>{{ section.settings.type_text }}</h3>
						<span>{{ section.settings.type_text_02 }}</span>
					</div>
				</div>
			{% endif %}
			
			<div class="probability">{{ section.settings.probability }}</div>
		</div>
	</div>
    {% endif %}
