<style>
  #{{section.id}}-product-specifications {
    padding: calc(7000vw/var(--base-width)) calc(12000vw/var(--base-width)) calc(4500vw/var(--base-width)) ;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: calc(3600vw/var(--base-width));
    background-color: {{ section.settings.background_color_main }};
    background-image: url({{ section.settings.background_image | image_url }});
    background-size: cover;
    background-position: top;
    background-repeat: no-repeat;
    font-family: Outfit-Regular;
    margin-top: -2px;
  }
  #{{section.id}}-product-specifications .shane-left,
  #{{section.id}}-product-specifications .shane-right {
    flex: 1;
  }
  #{{section.id}}-product-specifications .shane-right .parameter-container:last-of-type{
    border-bottom: 1px solid #8c8c8c;
  }
  #{{section.id}}-product-specifications .shane-left img {
    width: 100%;
  }
  #{{section.id}}-product-specifications .shane-right h2 {
    color: {{ section.settings.heading_color }};
    font-size: calc(5000vw/var(--base-width));
    line-height: 1;
    margin: 0;
    margin-bottom: calc(4000vw/var(--base-width)) ;
  }
  #{{section.id}}-product-specifications .shane-right .parameter-container {
    width: 100%;
    padding: calc(2000vw/var(--base-width)) 0;
    border-top: 1px solid #8c8c8c;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    font-size: calc(2000vw/var(--base-width));
    gap: calc(5700vw/var(--base-width));
  }
  #{{section.id}}-product-specifications .parameter-title {
    width: 32%;
    line-height: 1;
    color: {{ section.settings.title_color }};
  }
  #{{section.id}}-product-specifications .parameter-text {
    flex: 1;
    line-height: 1.3;
    color: {{ section.settings.text_color }};
  }
  #{{section.id}}-product-specifications .shane-left-mobile{
    display: none;
  }
  @media (max-width: 1728px){
    #{{section.id}}-product-specifications {
      padding-left: calc(8000vw/var(--base-width));
      padding-right: calc(8000vw/var(--base-width));
    }
  }
  @media (max-width: 1440px){
    #{{section.id}}-product-specifications {
      padding-left: calc(3500vw/var(--base-width));
      padding-right: calc(3500vw/var(--base-width));
    }
  }
  @media (max-width: 768px) {
    #{{section.id}}-product-specifications {
      flex-direction: column-reverse;
      padding: calc(7000vw/var(--base-width)) calc(1250vw/var(--base-width)) calc(2000vw/var(--base-width)) ;
      gap: calc(1000vw/var(--base-width));
      background-image: url({{ section.settings.background_image_mobile | image_url }});
    }
    #{{section.id}}-product-specifications .shane-right h2 {
      font-size: calc(3000vw/var(--base-width));
      margin-bottom: calc(2500vw/var(--base-width)) ;
    }
    #{{section.id}}-product-specifications .shane-right .parameter-container {
      padding: calc(1500vw/var(--base-width)) 0;
      font-size: calc(1300vw/var(--base-width));
      gap: calc(2000vw/var(--base-width));
    }
    #{{section.id}}-product-specifications .parameter-title {
      width: 38%;
    }
    #{{section.id}}-product-specifications .parameter-text {
      line-height: 1.23;
    }
    #{{section.id}}-product-specifications .shane-left-pc{
      display: none;
    }
    #{{section.id}}-product-specifications .shane-left-mobile{
      display: flex;
    }
  }
</style>
<div id="{{section.id}}-product-specifications">
  <div class="shane-left shane-left-pc">
    <img src="{{ section.settings.image | image_url }}" alt="{{ section.settings.image.alt }}">
  </div>
  <div class="shane-left shane-left-mobile">
    <img src="{{ section.settings.image_mobile | image_url }}" alt="{{ section.settings.image_mobile.alt }}">
  </div>
  <div class="shane-right">
    <h2>{{ section.settings.heading }}</h2>
    {%- for block in section.blocks -%}
      <div class="parameter-container">
        <div class="parameter-title">{{ block.settings.block_title }}</div>
        <p class="parameter-text">{{ block.settings.block_text }}</p>
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
{
  "name": "Product Specifications",
  "class": "product-specifications",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image Mobile"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "Background Image Mobile"
    },
    {
      "type": "color",
      "id": "background_color_main",
      "label": "Background Color",
      "default": "#1A1A1A"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#fff"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "item",
      "settings": [
        {
          "type": "text",
          "id": "block_title",
          "label": "Title",
          "default": "Add a title"
        },
        {
          "type": "text",
          "id": "block_text",
          "label": "Text",
          "default": "text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Specifications"
    }
  ]
}
{% endschema %}
