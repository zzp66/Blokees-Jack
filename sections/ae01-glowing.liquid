
<style>
    
    @media (min-width: 768px){
    .ae01-glowing>div{
        position:relative;
        width: 100%;
        
    }
    .ae01-glowing .line{
        position: absolute;
        max-width:calc(100vw* 1102 / 1920);
        width: 100%;
        top: calc(100vw* 118 / 1920);
        left: calc(100vw* 118 / 1920);
        height: 35vw;
        display: flex;    
        flex-direction: column;
        
    }
    .ae01-glowing .line .titile{
        color: #FFF;
        font-family: Outfit-Bold;
        font-size: calc(100vw* 50 / 1920);
        font-style: normal;
        font-weight: 700;
        line-height: calc(100vw* 65 / 1920); /* 130% */
        margin-bottom:calc(100vw* 15 / 1920);
    }
    .ae01-glowing .line .content{
        color: #FFF;
        font-family: Outfit-Regular;
        font-size: calc(100vw* 24 / 1920);
        font-style: normal;
        font-weight: 400;
        line-height: calc(100vw* 30 / 1920); /* 125% */
        margin-bottom:calc(100vw* 58 / 1920);
    
    }
    .ae01-glowing .line .liste{
        max-width:calc(100vw* 1102 / 1920);
        display: grid;
        grid-template-columns: repeat(3, 1fr);
		grid-gap: calc(100vw* 28 / 1920);
    }
    .ae01-glowing .line .liste .item{
        width: calc(100vw* 349 / 1920);
        height: calc(100vw* 250 / 1920);

    }
}
    @media (max-width: 768px){
        .ae01-glowing{
            overflow: hidden;
        }
        .ae01-glowing>div{
            position:relative;
            width: 100%;
            
        }
        .ae01-glowing .line{
            position: absolute;
            max-width:calc(100vw* 430 / 430);
            width: 100%;
            top: calc(100vw* 80 / 430);
            left: calc(100vw* 22 / 430);
            {% comment %} height: 35vw; {% endcomment %}
            display: flex;    
            flex-direction: column;
            
        }
        .ae01-glowing .line .titile{
            color: #FFF;
            font-family: Outfit-Bold;
            font-size: calc(100vw* 30 / 430);
            font-style: normal;
            font-weight: 700;
            line-height: calc(100vw* 34 / 430); /* 130% */
            margin-bottom:calc(100vw* 9 / 430);
        }
        .ae01-glowing .line .content{
            color: #FFF;
            font-family: Outfit-Regular;
            font-size: calc(100vw* 18 / 430);
            font-style: normal;
            font-weight: 400;
            line-height: calc(100vw* 24 / 430); /* 125% */
            margin-bottom:calc(100vw* 553 / 430);
        
        }
        .ae01-glowing .line .liste{
            max-width:calc(100vw* 389 / 430);
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-gap: calc(100vw* 10 / 430);
        }
        .ae01-glowing .line .liste .item{
            width: calc(100vw* 188 / 430);
            height: calc(100vw* 128 / 430);
    
        }
    
    
    }


</style>

<div > 
    <img src="{{ section.settings.block_image | image_url }}" style="width: 100%;" class="pc_show">
    <img src="{{ section.settings.block_mb_image | image_url }}" style="width: 100%;" class="mobile_show">
    <div class='line'>
        <div class="titile">    
            {{ section.settings.line_text }}
        </div>
        <div class="content">
            {{ section.settings.line_content }}
        </div>
        <div class="liste">
            {% for block in section.blocks %}
                {% if block.type =='msimg' %}
                   <img src="{{ block.settings.block_line_image | image_url }}" class="item">
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Ae01 Glowing",
        "class": "ae01-glowing",
        "settings": [
            {
				"type": "image_picker",
				"id": "block_image",
				"label": "Image"
			},
            {
				"type": "image_picker",
				"id": "block_mb_image",
				"label": "Image"
			},
            {
				"type": "text",
				"id":"line_text",
				"label": "Line Text"
			},
			{
				"type": "text",
				"id":"line_content",
				"label": "Line Content"
			}
        ],
        "blocks": [
            {
                "type": "msimg",
                "name":"msimg",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "block_line_image",
                        "label": "Image"
                    }
                ]
            }
        ],
        "presets": [
            {
             "name": "Ae01 Glowing"
               
            }
         ]
    }
{% endschema %}