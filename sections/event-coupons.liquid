<style>
  #{{ section.id }}-event-coupons {
    font-family: Outfit-Regular;
    width: 100%;
    padding-top: calc(8000vw / var(--base-width));
    padding-bottom: calc(2000vw / var(--base-width));
    background: {{ section.settings.background_color }};
  }

  #{{ section.id }}-event-coupons .title-container {
    display: flex;
    flex-direction: column;
    gap: calc(2000vw / var(--base-width));
    margin: 0 auto;
    align-items: center;
    margin-bottom: calc(3000vw / var(--base-width));
  }

  #{{ section.id }}-event-coupons .title-container .title {
    max-width: calc(91600vw / var(--base-width));
    color: {{ section.settings.title_color }};
    text-align: center;
    font-size: calc(8000vw / var(--base-width));
    font-weight: 600;
    line-height: 1.1;
    margin-top: 0;
    margin-bottom: 0;
  }

  #{{ section.id }}-event-coupons .title-container .title .special {
    color: {{ section.settings.title_color_special }};
  } 

