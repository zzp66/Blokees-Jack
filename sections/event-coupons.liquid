      justify-content: center;
    }

    #{{ section.id }}-event-coupons .coupons-item {
      flex: initial;
      width: calc((100% - calc(800vw / var(--base-width)))/2);
    }

    #{{ section.id }}-event-coupons .bottom-link {
      padding: calc(800vw / var(--base-width)) calc(4000vw / var(--base-width));
      gap: calc(900vw / var(--base-width));
      border-radius: calc(2500vw / var(--base-width));
      margin-top: calc(2500vw / var(--base-width));
