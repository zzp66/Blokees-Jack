    max-width: calc(91600vw / var(--base-width));
    color: {{ section.settings.title_color }};
    text-align: center;
    font-size: calc(2400vw / var(--base-width));
    line-height: 1.5;
    opacity: 0.8;
  }

  #{{ section.id }}-event-coupons .main-image {
    width: 100%;
  }

  #{{ section.id }}-event-coupons .bg-container {
    position: relative;
    display: flex;
    justify-content: center;
  }
  #{{ section.id }}-event-coupons .bg-container picture{
    width:100%;
  }
  #{{ section.id }}-event-coupons .main-link {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    padding: calc(1600vw / var(--base-width)) calc(4000vw / var(--base-width));
    gap: calc(1200vw / var(--base-width));
    text-decoration: none;
    border: 1px solid {{ section.settings.top_link_color }};
    border-radius: calc(2900vw / var(--base-width));
    overflow: hidden;
  }

  #{{ section.id }}-event-coupons .main-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 100%;
    background-color: {{ section.settings.top_button_bg }};
    transition: width 0.2s ease-in;
    z-index: -1;
  }
 
  #{{ section.id }}-event-coupons .main-link:hover::before {
    width: 100%;
  }
  #{{ section.id }}-event-coupons .main-link:hover .icon{
    transform: rotate(45deg);
    transition: transform 0.2s ease-in;
  }

  #{{ section.id }}-event-coupons .main-link .title {
    color: {{ section.settings.top_link_color }};
    font-size: calc(2400vw / var(--base-width));
    font-weight: 700;
    line-height: 1.08;
  }

  #{{ section.id }}-event-coupons .main-link .icon {
    display: flex;
    align-items: center;
    transition: transform 0.2s ease-in;
    width: calc(1700vw / var(--base-width));
  }
 #{{ section.id }}-event-coupons .main-link:hover{
    border-color: transparent;
  }

  #{{ section.id }}-event-coupons .bottom-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 100%;
    background-color: {{ section.settings.bottom_button_bg }};
    transition: width 0.2s ease-in;
    z-index: -1;
   
  }
  #{{ section.id }}-event-coupons .bottom-link:hover::before {
    width: 100%;
  }
  #{{ section.id }}-event-coupons .bottom-link:hover{
    background-color: transparent;
    border-color: {{ section.settings.bottom_link_color }};
  }
  #{{ section.id }}-event-coupons .bottom-link:hover .icon{
    transform: rotate(45deg);
    transition: transform 0.2s ease-in;
  }
  #{{ section.id }}-event-coupons .bottom-link {
    display: flex;
    align-items: center;
    padding: calc(1600vw / var(--base-width)) calc(4000vw / var(--base-width));
    gap: calc(1200vw / var(--base-width));
    text-decoration: none;
    border-radius: calc(2900vw / var(--base-width));
    background-color: {{ section.settings.bottom_link_bg_color }};
    width: fit-content;
    margin: 0 auto;
    margin-top: calc(7000vw / var(--base-width));
    position: relative;
    border-radius: calc(2900vw / var(--base-width));
    border: 1px solid transparent;
  }

  #{{ section.id }}-event-coupons .bottom-link .title {
    color: {{ section.settings.bottom_link_color }};
    font-size: calc(2400vw / var(--base-width));
    font-weight: 700;
    line-height: 1.08;
  }

  #{{ section.id }}-event-coupons .bottom-link .icon {
    display: flex;
    align-items: center;
  }

  #{{ section.id }}-event-coupons .coupons-container {
    width: calc(100vw - 12.5vw);
    margin: 0 auto;
    background-color: {{ section.settings.middle_bg_color }};
    border-radius: calc(3000vw / var(--base-width));
    padding: calc(8000vw / var(--base-width)) calc(6800vw / var(--base-width)) calc(6500vw / var(--base-width));
    position: relative;
  }

  #{{ section.id }}-event-coupons .top-box {
    max-width: 50%;
  }

  #{{ section.id }}-event-coupons .top-box .title-box {
    color: {{ section.settings.middle_text_color }};
    display: flex;
    flex-direction: column;
    gap: calc(1800vw / var(--base-width));
    margin-bottom: calc(5000vw / var(--base-width));
  }

  #{{ section.id }}-event-coupons .top-box .title {
    font-weight: 600;
    line-height: 1;
    text-transform: uppercase;
    font-size: clamp(12px, calc(10000vw / var(--base-width)), 100px);
  }

  #{{ section.id }}-event-coupons .top-box .sub-title {
    font-size: calc(2400vw / var(--base-width));
    line-height: 1.25;
    max-width: 83%;
  }

  #{{ section.id }}-event-coupons .top-box .top-box-img {
    width: 27%;
    position: absolute;
    right: calc(6700vw / var(--base-width));
    top: -4%; 
  }

  #{{ section.id }}-event-coupons .coupons-box {
    width: 100%;
    display: flex;
    gap: calc(7700vw / var(--base-width));
    align-items: center;
  }

  #{{ section.id }}-event-coupons .coupons-item {
    flex: 1;
  }

  #{{ section.id }}-event-coupons .coupons-item .coupons-image {
    width: 100%;
  }

