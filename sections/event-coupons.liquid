    #{{ section.id }}-event-coupons .bottom-link .title {
      font-size: calc(1300vw / var(--base-width));
      line-height: 1;
    }
  }
</style>

<div id="{{ section.id }}-event-coupons">
  <div class="title-container">
    <h2 class="title">
      <span class="normal">{{ section.settings.title }}</span>
      {% if section.settings.title_special != blank %}
        <span class="special">{{ section.settings.title_special }}</span>
      {% endif %}
    </h2>
    <div class="sub-title">{{ section.settings.sub_title }}</div>
  </div>
  <div class="bg-container">
    {% comment %} <img
      class="main-image"
      src="{{ section.settings.mian_img |  image_url }}"
      alt="{{ section.settings.mian_img.alt }}"
    > {% endcomment %}
    <picture>
      <source
        media="(max-width: 768px)"
        srcset="{{ section.settings.main_img_mobile | image_url }}"
      >
      <img
        class="main-image"
        src="{{ section.settings.mian_img |  image_url }}"
        alt="{{ section.settings.mian_img.alt }}"
        loading="lazy"
      >
    </picture>
    {% if section.settings.top_button_link_text != blank %}
      <a href="{{ section.settings.top_button_link }}" class="main-link">
        <div class="title">{{ section.settings.top_button_link_text }}</div>
        <div class="icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M1.65685 2.34315H13.6777M13.6777 2.34315V14.364M13.6777 2.34315L2.01041 14.0104" stroke="white"
              stroke-width="3" stroke-linecap="round" />
          </svg>
        </div>
      </a>
    {% endif %}
  </div>
  <div class="coupons-container">
    <div class="top-box">
      <div class="title-box">
        <div class="title">{{ section.settings.middle_title }}</div>
        <div class="sub-title">{{ section.settings.middle_sub_title }}</div>
      </div>
      <img
        class="top-box-img"
        src="{{ section.settings.middle_img |  image_url }}"
        alt="{{ section.settings.middle_img.alt }}"
      >
    </div>
    <div class="coupons-box">
      {% for block in section.blocks %}
        {% if forloop.index < 4 %}
          <div class="coupons-item">
            <img
              class="coupons-image"
              src="{{ block.settings.coupons_item |  image_url }}"
              alt="{{ block.settings.coupons_item.alt }}"
            >
          </div>
        {% endif %}
      {% endfor %}
    </div>
    {% if section.settings.bottom_button_link_text != blank %}
    <a href="{{ section.settings.bottom_button_link }}" class="bottom-link">
      <div class="title">{{ section.settings.bottom_button_link_text }}</div>
      <div class="icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M1.65685 2.34315H13.6777M13.6777 2.34315V14.364M13.6777 2.34315L2.01041 14.0104" stroke="white"
            stroke-width="3" stroke-linecap="round" />
        </svg>
      </div>
    </a>
    {% endif %}
  </div>
</div>

