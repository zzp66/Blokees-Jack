<style>
  .shane-pro-showcase {
    width: 100%;
    min-height: 30vw;
    background-color: #006de5;
    padding-top: 5vw;
    padding-bottom: 4vw;
  }
  .shane-pro-showcase > div {
    width: 94%;
    margin: auto;
  }
  .shane-pro-showcase > div > div {
    display: flex;
    justify-content: space-around;
    align-items: flex-end;
  }
  .pro-showcase-context .showcase-left {
    width: 50%;
    font-family: Outfit-Bold;
    text-transform: uppercase;
    color: #fff;
  }
  .showcase-left .left-title1 {
    font-size: 5vw;
    line-height: 5vw;
  }
  .showcase-left .left-title2 {
    font-size: 1.4vw;
    line-height: 1.6vw;
    margin-top: 1vw;
    opacity: 0.8;
  }
  .showcase-right {
    width: 40%;
    text-align: right;
    color: #fff;
  }
  .showcase-right .right-title {
    font-size: 32px;
  }
  .showcase-right .right-text {
    font-size: 16px;
    line-height: 22px;
    margin-top: 10px;
    opacity: 0.8;
  }
  .showcase-columns {
    padding-top: 2vw;
  }
  .showcase-columns > div {
    width: 100%;
    position: relative;
  }
  .showcase-columns img {
    margin: 1.5vw auto;
    width: 100%;
  }
  .showcase-columns > div a {
    color: #006de5;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 2vw;
    border: 1px solid #fff;
    border-radius: 1vw;
    text-align: center;
    line-height: 2vw;
    text-transform: capitalize;
    font-size: 1vw;
    color: #fff;
    font-family: Outfit-Bold;
    transition: 0.2s;
    overflow: hidden;
  }
  .showcase-columns .showcase-title {
    width: 100%;
    z-index: 2;
  }
  .showcase-bg {
    width: 0px;
    height: 100%;
    background-color: #fff;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    transition: 0.2s;
  }
  .showcase-columns > div a:hover {
    color: #006de5;
  }
  .showcase-columns a:hover .showcase-bg {
    width: 100%;
  }
  .showcaseSwiper .showcase-text-next,
  .showcaseSwiper .showcase-text-prev {
    position: absolute;
    top: 50%;
    width: 58px;
    height: 58px;
    margin-top: -29px;
    border-radius: 50%;
    display: none;
    justify-content: center;
    align-items: center;
    border: 1px solid #fff;
    cursor: pointer;
    z-index: 1;
  }
  .showcaseSwiper .showcase-text-next {
    left: 3%;
  }
  .showcaseSwiper .showcase-text-next img {
    width: 60%;
  }
  .showcaseSwiper .showcase-text-prev {
    right: 3%;
  }
  .showcaseSwiper .showcase-text-prev img {
    transform: scaleX(-1);
    width: 60%;
  }
  @media (max-width: 768px) {
    .shane-pro-showcase {
      padding-top: 24vw;
      padding-bottom: 7vw;
    }
    .shane-pro-showcase > div > div {
      flex-wrap: wrap;
    }
    .pro-showcase-context .showcase-left {
      width: 100%;
      display: flex;
      flex-wrap: wrap-reverse;
    }
    .showcase-left .left-title1 {
      font-size: 12vw;
      line-height: 11vw;
    }
    .showcase-left .left-title2 {
      font-size: 3.6vw;
      line-height: 3.4vw;
      margin-top: 0;
      margin-bottom: 1vw;
    }
    .showcase-right {
      width: 100%;
      text-align: left;
      margin-top: 2vw;
    }
    .showcase-right .right-title {
      font-size: 4.2vw;
    }
    .showcase-right .right-text {
      font-size: 3.4vw;
      line-height: 4vw;
      margin-top: 1vw;
    }
    .showcase-columns > div a {
      height: 6vw;
      border-radius: 3vw;
      line-height: 6vw;
      font-size: 3.2vw;
    }
    .showcaseSwiper .showcase-text-next,
    .showcaseSwiper .showcase-text-prev {
      display: flex;
    }
    .showcaseSwiper .showcase-text-next,
    .showcaseSwiper .showcase-text-prev {
      width: 7.4vw;
      height: 7.4vw;
      margin-top: -3.8vw;
    }
    .showcaseSwiper .showcase-text-next img {
      width: 50%;
    }
    .showcaseSwiper .showcase-text-prev img {
      width: 50%;
    }
    .showcase-columns .showcase-title {
      font-size: 2.4vw;
      line-height: 1.2;
    }
  }
</style>
<div>
  <div class="pro-showcase-context">
    <div class="showcase-left">
      <div class="left-title1">{{ section.settings.heading }}</div>
      <div class="left-title2">{{ section.settings.subtitle }}</div>
    </div>
    <div class="showcase-right">
      <div class="right-title">{{ section.settings.subtitle2 }}</div>
      <div class="right-text">{{ section.settings.context }}</div>
    </div>
  </div>
  <div class="showcase-columns">
    <div class="swiper showcaseSwiper">
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          {%- liquid
            assign image = block.settings.image
          -%}
          <div class="swiper-slide">
            <img src="{{ image | image_url }}" alt="{{image.alt }}">
            <a href="{{ block.settings.slide_link }}">
              <div class="showcase-bg"></div>
              <div class="showcase-title">{{ block.settings.buttontext }}</div>
            </a>
          </div>
        {% endfor %}
      </div>
      <div class="showcase-text-next">
        <img src="https://cdn.shopify.com/s/files/1/0679/6538/6990/files/icon-left.svg?v=1705634939">
      </div>
      <div class="showcase-text-prev">
        <img src="https://cdn.shopify.com/s/files/1/0679/6538/6990/files/icon-left.svg?v=1705634939">
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Product showcase",
  "class": "shane-pro-showcase",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Add a subtitle"
    },
    {
      "type": "text",
      "id": "subtitle2",
      "label": "Subtitle 2"
    },
    {
      "type": "textarea",
      "id": "context",
      "label": "Text"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Banner Img"
        },
        {
          "id": "slide_link",
          "type": "url",
          "label": "Slide link",
          "info": "Adds a link to slide"
        },
        {
          "type": "text",
          "id": "buttontext",
          "label": "Button Text",
          "default": "View More"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product showcase"
    }
  ]
}
{% endschema %}
