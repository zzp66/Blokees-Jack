<style>
	.shane-policy{
		width: 100%; 
		padding: 40px 50px;
		display: flex;
		justify-content: space-between;
		align-items: stretch;
		font-family: Outfit-Regular;
	}
	.shane-policy-left{
		width: 25%; min-width: 400px; min-height: 500px; margin-right: 20px; background-color: #fff; border-radius: 30px; font-size: 26px; line-height: 40px; padding-top: 80px;
	}
    .shane-policy-left>div{
          position: sticky; top: 100px;
    }
	.shane-policy-left>div>div{
		padding:25px 0px 15px 45px;
	}
	.shane-policy-left .active{
		background-color: #F6F6F6;
	}
	.shane-policy-left>div>div a{
		color: #343434;
	}
	.shane-policy-right{
		width: 100%; background-color: #fff; border-radius: 30px; padding: 80px 50px; color:#343434;
	}
	.shane-policy-right h1{
		color: #FF5F00; font-size: 70px; line-height: 88px; margin: 0 0 25px 0; text-transform: uppercase;
	}
	.shane-policy-right .policy-updated{
		font-size: 22px; line-height: 28px;
	}
	.policy-right-blocks{
		padding: 20px 0;
	}
	.shane-policy-right .text{
		font-size: 16px; line-height: 24px;
	}
    .shane-policy-right .text a{
      text-decoration: underline;
    }
	.shane-policy-right ul{
		padding-left: 20px;
	}
	.shane-policy-right li{
		font-size: 18px; line-height: 36px;
	}
	.shane-policy-right h2{
		font-size: 30px; line-height: 28px; margin: 0 0 15px 0;
	}
	.shane-policy-right h3{
		font-size: 24px; line-height: 28px; margin: 0 0 15px 0; font-family: Outfit-Bold;
	}
	.shane-policy-jump{
		display: none;
	}
@media (max-width: 1660px){
	.shane-policy-right h1{
		font-size: 56px;
	}
}
@media (max-width: 1440px){
	.shane-policy-right h1{
		font-size: 48px;
	}
}
@media (max-width: 1240px){
	.shane-policy{
		display: block;
	}
	.shane-policy-left{
		display: none;
	}
	.shane-policy-right h1{
		font-size: 42px;
		line-height: 60px;
		margin: 10px 0 25px 0;
	}
	.shane-policy-jump{
		margin: 0 0 20px 0; background-color: #ff5f00; color:#fff; border-radius: 30px; padding: 20px 50px; display: flex; justify-content: space-between; align-items: flex-start; position: sticky; top: 70px;
	}
	.jump-left{
		color: #fff; font-size: 16px;
	}
	.jump-right .title{
		font-size: 20px; font-weight: 600;
	}
	.jump-right .show-cd{
		padding-top: 10px; display: none;
	}
	.show-cd>div{
		padding: 5px 0; font-size: 16px;
	}
	.show-cd>div a{
		color:#eeeeee;
	}
}
@media (max-width: 768px){
	.shane-policy{
		padding: 40px 15px;
	}
	.shane-policy-right{
		padding: 50px 30px;
	}
	.shane-policy-right h1{
		font-size: 36px;
		line-height: 40px;
		margin: 0 0 15px 0;
	}
	.policy-right-blocks{
		padding: 10px 0;
	}
	.shane-policy-right li{
		font-size: 18px; line-height: 28px;
	}
	.shane-policy-right h2{
		font-size: 28px; line-height: 28px;
	}
	.shane-policy-right h3{
		font-size: 22px; line-height: 28px;
	}
    .shane-policy-jump{
		padding: 15px 30px;
	}
}
