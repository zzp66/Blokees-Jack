                {% if section.settings.menu9 != blank %}<div><a href="{{ section.settings.menu_link9 }}">{{ section.settings.menu9 | escape }}</a></div>{% endif %}
			</div>
		</div>
  	</div>
	<div class="shane-policy-right">
		<h1>{{ section.settings.title }}</h1>
		<div class="policy-updated">{{ section.settings.updated }}</div>
        {% for block in section.blocks %}
		<div class="policy-right-blocks"> 
            {% if block.settings.title != blank %}
            {% if block.settings.text_type == '1' %}<h2>{{ block.settings.title }}</h2>{% endif %}
			{% if block.settings.text_type == '2' %}<h3>{{ block.settings.title }}</h3>{% endif %}
            {% endif %}
            {% if block.settings.richtext != blank %}
            <div class="text">{{ block.settings.richtext }}</div>
            {% endif %}
		</div>
      {% endfor %}
	</div>
<script>
	$(document).ready(function(){
	  $(".jump-right .title").click(function(){
		$(".jump-right .show-cd").slideToggle(200);
	  });
	});
</script>
