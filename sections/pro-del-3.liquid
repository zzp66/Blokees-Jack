    justify-content: center;
    align-items: center;
    background-color: {{ section.settings.tab_background_color_active }};
    border-radius: calc(500vw / var(--base-width));
  }

  #{{ section.id }}-hero-detail3 .tab-item.tab-item-active .number {
    background-color: {{ section.settings.tab_main_color }};
    color:{{ section.settings.tab_background_color_active }};
  }

  #{{ section.id }}-hero-detail3 .text {
    color: {{ section.settings.tab_background_color_active }};
    font-size: calc(2600vw / var(--base-width));
    font-weight: 700;
    line-height: 1.23;
  }

  #{{ section.id }}-hero-detail3 .tab-item.tab-item-active .text {
    color: {{ section.settings.tab_main_color }};
  }

  #{{ section.id }}-hero-detail3 .content-box {
    flex: 1;
    background-color: {{ section.settings.content_bg_color }};
    border-radius: calc(1500vw / var(--base-width));
    padding: calc(4500vw / var(--base-width)) calc(3800vw / var(--base-width));
    min-height: calc(61000vw / var(--base-width));
  }

  #{{ section.id }}-hero-detail3 .content-item {
    display: none;
    flex-direction: column;
    gap: calc(5000vw / var(--base-width));
  }

  #{{ section.id }}-hero-detail3 .content-item.content-active {
    display: flex;
  }

  #{{ section.id }}-hero-detail3 .content-item img {
    width: 100%;
    gap: calc(5000vw / var(--base-width));
  }

  #{{ section.id }}-hero-detail3 .text-box {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: calc(1000vw / var(--base-width));
  }

  #{{ section.id }}-hero-detail3 .text-box .title {
    color: {{ section.settings.content_font_color }};
    font-size: calc(3000vw / var(--base-width));
    font-weight: 700;
    line-height: 1.2;
  }

