  }

  #{{ section.id }}-hero-detail3 .container {
    width: 100%;
    padding: 0;
  }

  #{{ section.id }}-hero-detail3 .title-container{
    display: flex;
    flex-direction: column;
    gap:  calc(2000vw / var(--base-width));
    margin-bottom: calc(4000vw / var(--base-width));
  }

  #{{ section.id }}-hero-detail3 .main-title {
