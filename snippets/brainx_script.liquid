{% if template.name=='collection'%}
<script type="text/javascript">
bxtag('event','view_category',{
desc:'{{collection.title}}'});
</script>
{% endif %}
{% if template.name=='product'&& product %}
<script type="text/javascript">
bxtag('event','view_item',{
price:'{{product.price | money_without_currency | remove:'.'| remove:','| divided_by:100.0}}',
currency:'{{shop.currency}}',
productName:'{{product.title | escape }}',
productId:'{{product.id}}',
imageLink:'{{product.featured_image | product_img_url:"large" | replace:"//","https://"}}'
});
</script>
{% endif %}
{% if template.name=='cart' && cart && cart.items %}
<script type="text/javascript">
bxtag('event','view_cart',{
price:'{{cart.total_price|money_without_currency|remove:'.'| remove:',' | divided_by:100.0}}',
currency:'{{shop.currency}}',
contents:[
{% for line in cart.items %}
    {
         productId: '{{ line.product_id }}', //商品ID(必填)
         productName: '{{ line.product.title | escap }}', //商品名称(⾮必填)
         price: '{{ line.original_price | money }}', //售价(必填)
         quantity:'{{ line.quantity }}' //商品数量(必填)
    }
{% unless forloop.last == true %}, {% endunless %}
{% endfor %}
    ]
});
         </script>
{% endif %}
