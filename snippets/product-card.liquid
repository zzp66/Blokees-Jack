<style>
  #product-grid .product-card .product-card-info{
    position: relative;
  }
  #product-grid .product-card .product-card-info .button.accent {
    background: #fff;
    color: #FF5F00;
    position: absolute;
    right: 20px;
    bottom: 20px;
    width: 40%;
    min-width:150px;
    font-size: 14px;
    height: 36px;
    border-radius: 18px;
    font-family: Outfit-Bold;
    padding:0 0;
  }
  #product-grid .product-card .product-card-info .button.accent svg circle{
    stroke: #FF5F00;
  }
  @media (min-width: 768px){
    .product-card .product-card-info .product-card-metafield{
      border: calc(100vw* 1 / 1920) solid #fff;
      color: #fff;
      border-radius: calc(100vw* 40 / 1920);
      padding: calc(100vw* 5 / 1920) calc(100vw* 10 / 1920);
      margin-bottom: calc(100vw* 5 / 1920);
      font-size: calc(100vw* 14 / 1920);
      line-height: calc(100vw* 16 / 1920);
      min-height: calc(100vw* 26 / 1920);
      width: fit-content;
      background: #006DE5;
      text-align: left;    
    }


    #product-grid .product-card .product-card-info .button.accent {
      background: #fff;
      color: #FF5F00;
      position: absolute;
      right: calc(100vw* 20 / 1920);
      bottom: calc(100vw* 20 / 1920);
      width: 40%;
      min-width:calc(100vw* 150 / 1920);
      font-size: calc(100vw* 14 / 1920);
      height: calc(100vw* 36 / 1920);
      border-radius: calc(100vw* 18 / 1920);
      font-family: Outfit-Bold;
      padding:0 0;
    }
  }
  {% comment %} .product-card .product-card-info .product-card-metafield{
    border: 1px solid #fff;
    color: #fff;
    border-radius: 40px;
    padding: 5px 10px;
    margin-bottom: 5px;
    font-size: 14px;
    line-height: 16px;
    height: 26px;
    width: fit-content;
    background: #006DE5;    
  } {% endcomment %}
  .product-card .product-card-swatches--container {
      height: 45px;margin-top:5px;
  }  
   .product-card .product-card-swatches{
      transform:translateY(0);
  }
  .product-card .product-card-swatches .product-card-swatch{
    width:40px; height:40px; border-radius:50%; box-shadow: none; margin-right: 5px; border: 1px solid #ff5f00;
  }
  .product-card .product-card-swatches .product-card-swatch.active {
    background-color: #ff5f00; box-shadow: none;
  }
  .product-card .product-card-swatches .product-card-swatch img{
    width:80%; margin:auto;
  }
  .product-card .product-card-info .icon-shopping-cart{
    width: 28px; height:28px; border-radius:50%;background: #006DE5; color:#fff;text-align: center; font-size:16px; line-height:28px;
  }
  .product-v-name{
    width:100%; line-height:30px; min-height:35px; font-size:18px; color:#FF5F00; text-align: center; padding:5px 0 0;font-family: Outfit-Bold;
  }
  .product-v-img{
    width:100%; padding:5px 20px 0; overflow: hidden; height:60px;
  }
  .shane-coming{
    background: #fff;
    color: #FF5F00;
    position: absolute;
    right: 20px;
    bottom: 20px;
    width: fit-content;
    min-width:120px;
    padding:10px;
    font-size: 14px;
    border-radius: 18px;
    font-family: Outfit-Bold;
    text-align: center;
    line-height: 16px;
  }

  @media (min-width: 768px){
    .shane-coming{
      background: #fff;
      color: #FF5F00;
      position: absolute;
      right: calc(100vw* 20 / 1920);
      bottom: calc(100vw* 26 / 1920);
      width: fit-content;
      min-width:calc(100vw* 120 / 1920);
      padding:calc(100vw* 10 / 1920);
      font-size: calc(100vw* 14 / 1920);
      border-radius: calc(100vw* 18 / 1920);
      font-family: Outfit-Bold;
      text-align: center;
      line-height: calc(100vw* 16 / 1920);
    }
  }
@media (max-width: 1300px){
  .shane-coming{
    position: absolute;    
    {% comment %} margin: 0 0 0 auto; {% endcomment %}
  }
}
@media (max-width: 769px){
  #product-grid .product-card .product-card-info .button.accent {
    position: static;

    
  }
  
  #product-grid .product-card .product-card-info .button.accent{
    background: #fff;
    color: #FF5F00;
    position: absolute;
    right: 20px;
    bottom: 20px;
    width: 40%;
    min-width: 150px;
    font-size: 14px;
    height: calc(100vw* 25 / 430);
    border-radius: 18px;
    font-family: Outfit-Bold;
    padding: calc(100vw* 5 / 430);
        font-size: calc(100vw* 12 / 430);
        min-width: calc(100vw* 100 / 430);
  }
  .product-card .product-card-info .product-card-metafield{
    font-size: 12px;
  } 
  .product-v-name{
    line-height:18px; min-height:35px; font-size:14px; display:flex;justify-content: center; align-items: center;
  }
}
</style>
{%- liquid
	assign products_hover_images = settings.products_hover_images
	assign product_aspect_ratio = settings.product_aspect_ratio
	assign product_content_alignment = settings.product_content_alignment
	assign featured_media = product_card_product.featured_media
	assign product_price_position = settings.product_price_position
	assign ratio = 1
	assign sizes = '298x298,596x596'
	assign info_spacing = true
	assign product_card_border = settings.product_card_border
	assign product_card_shadow = settings.product_card_shadow
	assign product_card_shadow_class = 'has-shadow--' | append: product_card_shadow

	if featured_media.media_type != 'image'
		assign featured_media = featured_media.preview_image
	endif
	if product_aspect_ratio == 'adapt'
		assign ratio = featured_media.aspect_ratio
		assign sizes = '298x0,596x0'
	elsif product_aspect_ratio == 'portrait'
		assign ratio = 1 | divided_by: 1.25
		assign sizes = '298x350,596x700'
	elsif product_aspect_ratio == 'landscape'
		assign ratio = 1 | divided_by: 0.75
		assign sizes = '298x250,596x500'
	endif

	assign color_body_bg = settings.color_body_bg | downcase
	assign color_product_card_bg = settings.color_product_card_bg | downcase



	if color_body_bg == color_product_card_bg or color_product_card_bg == 'transparent' or color_product_card_bg == 'rgba(0,0,0,0)'
		unless product_card_border
			assign info_spacing = false
		endunless
		if product_card_shadow
			assign info_spacing = true
		endif
	endif

	assign is_purchasable = false
	if product_card_product.available and product_card_product.variants.size == 1
		assign is_purchasable = true
	endif
   assign is_ultraman = template | replace: '.', '-' | handle
-%}
{%- if product_card_product and product_card_product != empty -%}
<product-card class="product-card text-{{ product_content_alignment }} product-card--content-spacing-{{ info_spacing }} product-card--border-{{ product_card_border }} {{ product_card_shadow_class }}">
  <figure class="product-featured-image {% if products_hover_images and product_card_product.images.size > 1 %}thb-hover{% endif %}">
    {% render 'product-card-badge', product_card_product: product_card_product %}
    <a href="{% if is_ultraman == "collection-ao3" %}#{% else %}{{ product_card_product.url  }}{% endif %}" title="{{ product_card_product.title | escape }}" {% if is_ultraman == "collection-ao3"  %}onclick="return false;"{% endif %} class="product-featured-image-link aspect-ratio aspect-ratio--{{ settings.product_aspect_ratio }}" style="--padding-bottom: {{ 1 | divided_by: ratio | times: 100 }}%;">
      {%- if products_hover_images and product_card_product.images.size > 1 -%}
        {%- render 'responsive-image', class: 'product-secondary-image', image: product_card_product.images[1], sizes: sizes -%}
      {%- endif -%}
			{%- if featured_media -%}
      	{%- render 'responsive-image', class: 'product-primary-image', image: featured_media, sizes: sizes -%}
			{%- else -%}
				<div class="thb-placeholder">
					{{ 'product-1' | placeholder_svg_tag }}
				</div>
			{%- endif -%}

			{%- if settings.enable_quick_view -%}
			<quick-view class="product-card-quickview" data-product-handle="{{ product_card_product.handle }}" tabindex="-1">
				<div class="loading-overlay">{% render 'svg-icons' with 'thb-loading' %}</div>
				<span>{{ 'products.product.quick_view' | t }}</span>
			</quick-view>
			{%- endif -%}
    </a>
  </figure>
  {% comment %}
  this is product-card-swatch
  {% endcomment %}
    {% if is_ultraman != "collection-ao3" %}
       {% if product_card_product.options_with_values[0].values.size != 0 %}
       <div class="product-v-name">Select options</div>
       {% else %}
       <div class="product-v-name"></div>
       {% endif %}
       
    <div class="product-v-img">{% render 'product-card-swatch-new', product: product_card_product, sizes: sizes %}</div>
    {% endif %}
	<div class="product-card-info">
         {% assign metafield_value1 = product_card_product.metafields.custom.custom_labels %}
         {% if metafield_value1 != blank  %} <div class="product-card-metafield">{{ metafield_value1 }}</div>{% endif %}
		{%- if settings.show_products_vendor -%}
		<div class="product-card-vendor"><a href="{{ product_card_product.vendor | url_for_vendor }}" title="{{ product_card_product.vendor | escape }}">{{ product_card_product.vendor }}</a></div>
		{%- endif -%}
		{%- liquid
			if product_price_position == 'before-product-title'
				render 'product-price', product: product_card_product
			endif
		-%}      
  	<a href="{% if is_ultraman == "collection-ao3" %}{% else %}{{ product_card_product.url | within: collection }}{% endif %}" title="{{ product_card_product.title | escape }}" class="product-card-title" {% if is_ultraman == "collection-ao3"  %}onclick="return false;"{% endif %}>{{ product_card_product.title  | truncate: 150 }}</a>
	{% if is_ultraman != "collection-ao3"  %}	
    {%- liquid
			if product_price_position == 'after-product-title'
				render 'product-price', product: product_card_product
			endif
		-%}
      {% endif %}
      <!-- Start of Judge.me code -->
      <div style='{{ jm_style }}' class='jdgm-widget jdgm-preview-badge' data-id='{{ product_card_product.id }}' data-auto-install='false'>
        {{ product_card_product.metafields.judgeme.badge }}
      </div>
      <!-- End of Judge.me code -->		
  {% comment %}
        {% render 'product-card-swatch', product: product_card_product, sizes: sizes %}
		{%- if settings.show_products_rating and product_card_product.metafields.reviews.rating.value != blank -%}
		<div class="star-rating" style="--star-rating: {{ product_card_product.metafields.reviews.rating.value.rating }};">{%- if settings.show_products_rating_average %}<span class="body-font">{{ product_card_product.metafields.reviews.rating.value.rating }}</span>{%- endif -%}</div>
		{%- endif -%}
  {% endcomment %}
		{%- render 'product-card-labels', product: product_card_product -%}
		{%- if settings.enable_quick_add -%}
			{% if is_purchasable %}
              {% if is_ultraman != "collection-ao3" %}
				<button class="product-card--add-to-cart-button product-card--add-to-cart-button-simple button accent" data-product-id="{{ product_card_product.selected_or_first_available_variant.id }}" tabindex="-1" {% if product_card_product.selected_or_first_available_variant.available == false %}disabled{% endif %}>
					{% render 'svg-icons' with 'thb-loading' %}
					<span class="product-card--add-to-cart-text">
						{%- if product_card_product.selected_or_first_available_variant.available -%}
              {{- 'products.product.add_to_cart' | t -}}
            {%- else -%}
              {{- 'products.product.sold_out' | t -}}
            {%- endif -%}
					</span>
				</button>
                {%- endif -%}
			{% else %}
              {% if is_ultraman != "collection-ao3" and is_ultraman == "shane" %}	
				<quick-view class="product-card--add-to-cart-button button accent" data-product-handle="{{ product_card_product.handle }}" tabindex="-1">
					{% render 'svg-icons' with 'thb-loading' %}
                  <div style="width:100%;height:100%; padding: 0 5px 0 15px; display:flex; justify-content: space-between; align-items: center;">
                    <span class="product-card--add-to-cart-text">{% if is_ultraman == "collection-ao3"  %}Check Option{% else %}Choose Options{% endif %}</span>
                    <div class="icon-shopping-cart">
                      <span class="fa fa-shopping-cart"></span>
                    </div>
                  </div>					
				</quick-view>
                {% elsif is_ultraman == "collection-ao3" %}
                 {% comment %}
                <div class="shane-coming">For Limited Countries/Territories</div>
                {% endcomment %}
                {% else %}
                <a href="{{ product_card_product.url | within: collection }}"><div class="shane-coming">Shop Now</div></a>
                {% endif %}
			{% endif %}
		{%- endif -%}
  </div>
</product-card>
{%- else -%}
<product-card class="product-card text-{{ product_content_alignment }} product-card--content-spacing-{{ info_spacing }} product-card--border-{{ product_card_border }} {{ product_card_shadow_class }}">
	<figure class="product-featured-image {% if settings.products_hover_images %}thb-hover{% endif %}">
		<a href="{{ product_card_product.url  }}" title="{{ product_card_product.title | escape }}" class="product-featured-image-link aspect-ratio aspect-ratio--{{ settings.product_aspect_ratio }}" style="--padding-bottom: {{ 1 | divided_by: 1 | times: 100 }}%;">
			<div class="thb-placeholder">
				{{ 'product-1' | placeholder_svg_tag }}
			</div>
			<quick-view class="product-card-quickview" data-product-handle="{{ product_card_product.handle }}" tabindex="-1">
				<div class="loading-overlay">{% render 'svg-icons' with 'thb-loading' %}</div>
				<span>{{ 'products.product.quick_view' | t }}</span>
			</quick-view>
		</a>
	</figure>
	<div class="product-card-info">
		<div class="product-card-vendor"><a href="#" title="{{ 'onboarding.product_vendor' | t }}">{{ 'onboarding.product_vendor' | t }}</a></div>
		{%- liquid
			if product_price_position == 'before-product-title'
				render 'product-price', product: product_card_product
			endif
		-%}
		<a href="#" title="{{ product_card_product.title | escape }}" class="product-card-title">{{ 'onboarding.product_title' | t }}</a>
		{%- liquid
			if product_price_position == 'after-product-title'
				render 'product-price', product: product_card_product
			endif
		-%}
		{%- if settings.show_products_rating and product_card_product.metafields.reviews.rating.value != blank -%}
		<div class="star-rating" style="--star-rating: 5;"><span class="body-font">5</span></div>
		{%- endif -%}
		{%- if settings.enable_quick_add -%}
		<quick-view class="product-card--add-to-cart-button button accent" data-product-handle="" tabindex="-1">
			{% render 'svg-icons' with 'thb-loading' %}
			<span class="product-card--add-to-cart-text">{{ 'products.product.choose_options' | t }}</span>
		</quick-view>
		{%- endif -%}
	</div>
</product-card>
{%- endif -%}
